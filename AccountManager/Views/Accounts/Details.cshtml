@model AccountManager.Models.Account

@{
    ViewData["Title"] = "Details";
}

<h2>Account Details</h2>

<form asp-action="Details" method="post">
    <table class="table">
        <tr>
            <th style="background-color: #f0f8ff; font-weight: bold; text-align: center; vertical-align: middle;">ID</th>
            <td><input type="text" class="form-control" asp-for="Id" readonly /></td>
        </tr>
        <tr>
            <th style="background-color: #f0f8ff; font-weight: bold; text-align: center; vertical-align: middle;">Username</th>
            <td><input type="text" class="form-control" asp-for="Username" /></td>
            <span asp-validation-for="Username" class="text-danger"></span>
        </tr>
        <tr>
            <th style="background-color: #f0f8ff; font-weight: bold; text-align: center; vertical-align: middle;">First Name</th>
            <td><input type="text" class="form-control" asp-for="Firstname" /></td>
            <span asp-validation-for="Firstname" class="text-danger"></span>
        </tr>
        <tr>
            <th style="background-color: #f0f8ff; font-weight: bold; text-align: center; vertical-align: middle;">Last Name</th>
            <td><input type="text" class="form-control" asp-for="Lastname" /></td>
            <span asp-validation-for="Lastname" class="text-danger"></span>
        </tr>
        <tr>
            <th style="background-color: #f0f8ff; font-weight: bold; text-align: center; vertical-align: middle;">Birthdate</th>
            <td><input type="date" class="form-control" asp-for="Birthdate" /></td>
            <span asp-validation-for="Birthdate" class="text-danger"></span>
        </tr>
        <tr>
            <th style="background-color: #f0f8ff; font-weight: bold; text-align: center; vertical-align: middle;">Birthplace</th>
            <td><input type="text" class="form-control" asp-for="Birthplace" placeholder="New Birthplace" /></td>
            <span asp-validation-for="Birthplace" class="text-danger"></span>
        </tr>
        <tr>
            <th style="background-color: #f0f8ff; font-weight: bold; text-align: center; vertical-align: middle;">Residence</th>
            <td><input type="text" class="form-control" asp-for="Residence" /></td>
            <span asp-validation-for="Residence" class="text-danger"></span>
        </tr>
        <tr>
            <th style="background-color: #f0f8ff; font-weight: bold; text-align: center; vertical-align: middle;">Password</th>
            <td><input type="password" class="form-control" asp-for="Password" placeholder="New Password" /></td>
            <span asp-validation-for="Password" class="text-danger"></span>
        </tr>
    </table>

    <div class="form-group row">
        <div class="col-sm-10 offset-sm-2">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</form>
